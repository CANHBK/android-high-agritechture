<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.administrator.glasshouse.ui.monitor.AddNodeBottomSheet">

    <data>

        <import type="androidx.lifecycle.LiveData" />

        <import type="com.example.administrator.glasshouse.vo.Monitor" />

        <import type="com.example.administrator.glasshouse.vo.Resource" />

        <import type="com.example.administrator.glasshouse.vo.Status" />

        <import type="com.example.administrator.glasshouse.ui.monitor.MonitorViewModel" />

        <variable
            name="result"
            type="LiveData&lt;Resource&lt;Monitor>>" />

        <variable
            name="viewModel"
            type="MonitorViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="8dp">

        <ProgressBar
            android:id="@+id/load_more_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleGone="@{result.status==Status.LOADING}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{result.message}"
            android:textColor="@color/red"
            android:textSize="14sp"
            app:visibleGone="@{result.status==Status.ERROR}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:weightSum="10">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_sensor" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="9"
                android:text="Thêm node cảm biến"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_node_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="ID node cảm biến"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@={viewModel.addMonitorForm.fields.tag}"
            android:textSize="18sp"
            app:error="@{viewModel.addMonitorForm.tagError}" />

        <EditText
            android:id="@+id/edt_node_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="Tên node cảm biến"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@={viewModel.addMonitorForm.fields.name}"
            android:textSize="18sp"
            app:error="@{viewModel.addMonitorForm.nameError}" />

        <Button
            android:id="@+id/btn_add"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="@{()->viewModel.onAddMonitorClick()}"
            android:text="Thêm"
            android:textAllCaps="false"
            android:textStyle="bold" />
    </LinearLayout>
</layout>