<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_gravity="center"
android:gravity="center"
android:orientation="vertical"
tools:context=".Fragment.AddSensorFragment">

<android.support.design.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Thêm node cảm biến"
        android:textSize="24sp" />
</android.support.design.card.MaterialCardView>

<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/edt_service_tag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Mã định danh Gate Way"
        android:inputType="text" />
</android.support.design.widget.TextInputLayout>

<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/edtSensorName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Tên node cảm biến"
        android:inputType="text" />
</android.support.design.widget.TextInputLayout>

<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/edtSensorID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Mã định danh"
        android:inputType="text" />
</android.support.design.widget.TextInputLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <android.support.design.button.MaterialButton
        android:id="@+id/btn_cancel_add_node_env"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Hủy"
        app:cornerRadius="0dp" />

    <android.support.design.button.MaterialButton
        android:id="@+id/btnSubSensor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Thêm"
        app:cornerRadius="0dp" />
</LinearLayout>

</LinearLayout>