<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.administrator.glasshouse.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login"

        >
        <action
            android:id="@+id/to_create_account"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.administrator.glasshouse.ui.register.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.administrator.glasshouse.ui.dashboard.DashboardFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/monitor"
            app:destination="@id/monitorFragment" />
    </fragment>
    <fragment
        android:id="@+id/monitorFragment"
        android:name="com.example.administrator.glasshouse.ui.monitor.MonitorFragment"
        android:label="fragment_monitor"
        tools:layout="@layout/fragment_monitor" >
        <argument
            android:name="serviceTag"
            app:argType="string" />
        <action
            android:id="@+id/monitor_setting"
            app:destination="@id/monitorSettingFragment" />
    </fragment>
    <fragment
        android:id="@+id/monitorSettingFragment"
        android:name="com.example.administrator.glasshouse.ui.nodesettings.MonitorSettingFragment"
        android:label="MonitorSettingFragment">
        <argument
            android:name="monitorTag"
            app:argType="string" />
    </fragment>
</navigation>